---
import '@fontsource-variable/gabarito'
import '@fontsource/rock-salt'
import '@fontsource/space-mono'
import '@styles/global.css'

import RandomBackground from '@components/RandomBackground.astro'
import SmoothScroll from '@components/SmoothScroll.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>LOVE HANGOVER // QUEER. PUNK. ACID. SWEAT</title>
    <SmoothScroll />
  </head>
  <body>
    <RandomBackground className="text-white" />
    <slot />
  </body>
</html>

<script>
  import { cleanupHeaderHeight, initHeaderHeight } from '@utils/headerHeight'

  // Initialize header height management
  document.addEventListener('DOMContentLoaded', initHeaderHeight)

  // Clean up on page navigation
  document.addEventListener('astro:before-swap', cleanupHeaderHeight)
  document.addEventListener('astro:after-swap', initHeaderHeight)
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>
